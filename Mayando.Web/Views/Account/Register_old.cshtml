@using CaptchaMvc.HtmlHelpers
@using Myembro.Properties
@model Myembro.ViewModels.RegisterViewModel
@{
    Layout = "~/Views/Shared/SiteLayout.cshtml";
}
<link rel="stylesheet" href="@Url.Content("~/Content/styles/font-face.css")" type="text/css"  />
           @Html.ValidationSummary(true, Resources.LogOnFailed)
<style>
    #register-form
    {
        position: relative;
        min-height:640px;
    }
    #register-form-fieldset {
        padding: 5%;
        width: 50%;
        position: absolute;
        display: block;
        left: 0%;
    }
</style>
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal",id="register-form" }))
{
   <fieldset id="register-form-fieldset">
       
        <div class="control-group">
            <label class="control-label" for="UserName">
                @Resources.AccountRegisterUserName
            </label>
            <div class="controls">
                @Html.ValidationMessage("UserName")
                @Html.TextBox("UserName", Model.UserName)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="Email">
                @Resources.AccountRegisterEmail
            </label>
            <div class="controls">
              @Html.TextBox("Email", Model.Email)
              @Html.ValidationMessage("Email")
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="Password">
                @Resources.AccountRegisterPassword
            </label>
            <div class="controls">               
                @Html.Password("Password", Model.Password)
                 @Html.ValidationMessage("Password")
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="ConfirmPassword">
                @Resources.AccountRegisterConfirmPassword
            </label>
            <div class="controls">              
                @Html.Password("ConfirmPassword", Model.ConfirmPassword)
                  @Html.ValidationMessage("ConfirmPassword")
            </div>
            <div>
             @Html.MathCaptcha(Resources.ButtonRefreshText, Resources.FieldInput, Resources.RequiredFieldValidationMessage, false)
                </div>
        </div>
       
       
        <div class="control-group">
            <label class="control-label" for="CaptchaPicture" id="captcha">
                @Html.TextBox("Captcha", Model.Captcha, new {@readonly="readonly",@overflow="scroll"})
            </label>
            <div class="controls" >
               @Html.ValidationMessage("UserInputCaptcha", "*")
                @Html.TextBox("UserInputCaptcha", Model.UserInputCaptcha)
            </div>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                @Resources.AccountLogonRegister
            </button>
            @Html.ActionLink(@Resources.CancelButtonText, "Index", null, null, new { @class = "btn" })
        </div>
  </fieldset>
}
<style media="screen" type="text/css">

    </style>