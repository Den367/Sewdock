
@using Mayando.Web.Extensions
@using Mayando.Web.Infrastructure
@using Mayando.Web.Properties
@model  Mayando.Web.Models.LogOnModel

@{
    ViewBag.Title = @Resources.AccountLogOn;
}

<hgroup class="title">
   
    <h2>@Resources.LogOnEnterCredentials</h2>
</hgroup>

