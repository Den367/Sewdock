@using Mayando.Web.Extensions
@using Mayando.Web.Infrastructure
@using Mayando.Web.Properties
@model Mayando.Web.Models.EmbroideryItem

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/SiteLayout.cshtml";
}

@section TitleContent{
    @if (Model != null)
    {
        @Html.Encode(Model.Title)
    }
}

@section MainContent
{
    <h3>@string.Format("{0} {1}",Resources.DeletionHeader, Model.DisplayTitle)</h3>
    @{Html.RenderPartial(PartialViewName.ConfirmDelete, Model.Id); }
}