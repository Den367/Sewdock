@model Myembro.Infrastructure.EmbroNavigationContext
@using Myembro.Extensions
@using Myembro.Infrastructure

@{ Layout = null;}
@if (null != Model.Embros && Model.TotalItemCount > 0)
{     	    
    <div class="navigation-filmstrip slider">
        @foreach (var embro in Model.Embros)
        {
            embro.PageNo = Model.PageNumber;
            embro.PageSize = Model.PageSize;                                  
            <ins>
                @{ Html.RenderPartial(PartialViewName.EmbroThumbnail, embro); }
            </ins>
        }

    </div>
}

<script type="text/javascript">
    $(function () {
        $('div.navigation-filmstrip a.btn').on('click',(function (e) {           
            $('div#embro-design-block > svg').animate({
                left: -500 
            }, 500);           
            return true;
        }));
    });
    function shiftLeftPreview() {
        $('div#embro-design-block > svg').css({ left: 500 });
        //alert('shift');
        $('div#embro-design-block > svg').animate({
        left: 0
    }, 200);
}
</script>