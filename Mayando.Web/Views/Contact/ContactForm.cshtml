@using Myembro.Extensions           
@using Myembro.Properties


    @using (Html.BeginContactSendMessageForm()) { 
    <div id="contact-form">
        <style>
            textarea#Text {margin-left: 10%; width: 200%;}
           input#AuthorName,input#AuthorEmail {margin-left: 10%; width: 400%;}
            td input[type="submit"]{ width: 400%;}
        </style>
        @Html.ValidationSummary(Resources.ValidationSummaryGenericTitle)
        <table>
            <tbody>
                <tr>
                    <td><label for="AuthorName" class="required">@Resources.ContactAuthorName</label></td>
                    <td colspan="5">@Html.TextBox("AuthorName")@Html.ValidationMessage("AuthorName", "*")</td>
                </tr>
                <tr>
                    <td><label for="AuthorEmail" class="required">@Resources.ContactAuthorEmail</label></td>
                    <td colspan="5">@Html.TextBox("AuthorEmail")@Html.ValidationMessage("AuthorEmail", "*")</td>
                </tr>
                <tr>
                    <td style="vertical-align: top"><label for="Text" class="required">@Resources.ContactAuthorMessage</label></td>
                    <td colspan="2">@Html.TextArea("Text", string.Empty, 8, 40, null)@Html.ValidationMessage("Text", "*")</td>
                </tr>
                <tr>
                    <td colspan="4"><input type="submit" value="@Html.AttributeEncode(Resources.ContactSubmit)" class="btn btn-large bg-color-orange"/></td>
                   
                </tr>
            </tbody>
        </table>
    </div>
     } 
